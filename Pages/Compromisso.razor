@page "/compromisso"
@using Model

<h1>Compromisso</h1>
<header>
 <div style='margin-top:20px'>
  <button class="btn btn-primary">Salvar e fechar</button>
  <button class="btn btn-primary">Apagar</button>
  <button class="btn btn-primary">Recorrência</button>
 </div>
</header>

<div class='form-group'>

 <EditForm Model="@client" OnValidSubmit="@HandleValidSubmit">

  <div style='padding: 10px; margin-top: 10px; margin-bottom: 10px;'>

   <label class='form-check-label' for="test">Assunto</label>
   <InputText id="name" @bind-Value="client.Assunto" class="form-control" style='' />

   <div class="form-inline" style='margin-top:20px; margin-bottom:20px'>
    <label class='form-check-label' for="test">Usuário</label>
    <InputText id="usuario" @bind-Value="client.Usuario" class="form-control" style='max-width: 300px' />

    <label for="" style='margin-left:20px'>Tipo</label>
    <InputText id="tipo" @bind-Value="client.Tipo" class="form-control" style='max-width: 300px; margin-left:20px' />

   </div>
   <label class='form-check-label' for="test">Pessoa</label>
   <InputText id="pessoa" @bind-Value="client.Pessoa" class="form-control" style='' />

  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
 </EditForm>

 <div>
  <div style='margin-bottom:10px; margin-top:20px;'>
   <label for=""> Recorrência</label>
  </div>

  <div>
   <div class='form-inline' style='margin-bottom:20px;margin-top:20px;'>
    <label for="">Inicio</label>
    <input style='margin-left:20px' class="form-control" type="date" value="2011-08-19" id="date-input-inicio" />
    <input style='margin-left:20px' class="form-control" type="date" value="2011-08-19" id="date-input-inicio" />
    <input style='margin-left:20px' type="checkbox" class="form-check-input" id="dia-inteiro-checkbox">
    <label for="" class="form-check-label"> Dia Inteiro</label>
   </div>

   <div class='form-inline'>
    <label for="">Fim</label>
    <input style='margin-left:20px' class="form-control" type="date" value="2011-08-19" id="date-input-inicio" />
    <input style='margin-left:20px' class="form-control" type="date" value="2011-08-19" id="date-input-fim" />
   </div>
  </div>
  <div style='margin-top:20px' class="form-group">
   <label for="exampleFormControlTextarea1">Example textarea</label>
   <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
 </div>

</div>

